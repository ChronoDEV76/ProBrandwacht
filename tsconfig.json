{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "types": ["node", "react", "react-dom", "vitest", "@testing-library/jest-dom"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "app",
    "components",
    "lib",
    "styles",
    "__tests__",
    "next-env.d.ts",
    "next-contentlayer.d.ts",
    ".next/types/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "out",
    "coverage",

    "vite.config.*",
    "vitest.config.*",
    "tailwind.config.*",
    "postcss.config.*",
    "next.config.*",
    "eslint.config.*",
    "playwright.config.*"
  ]
}

