{
  "toneProfile": "scripts/tone/probrandwacht-tone.json",
  "includeRoots": [
    "app/(site)",
    "components",
    "content",
    "lib"
  ],
  "includeExtensions": [
    ".ts",
    ".tsx",
    ".js",
    ".jsx",
    ".mdx",
    ".md",
    ".json"
  ],
  "excludeDirs": [
    ".git",
    ".next",
    "node_modules",
    "dist",
    "build",
    "out",
    "public",
    "scripts",
    "docs",
    "utils",
    "tests",
    "__tests__",
    "coverage",
    ".turbo",
    ".vercel"
  ],
  "ignorePathContains": [
    "lib/seo/seo-keywords.ts",
    "lib/schema.ts",
    "lib/seo/authoritative-sources.ts"
  ],
  "maxFileSizeBytes": 2000000,
  "rules": [
    {
      "id": "FORBIDDEN_COMPONENTS",
      "severity": "HIGH",
      "note": "Deze componenten horen niet meer in de frontstage.",
      "patterns": [
        "\\bPlatformPricingNote\\b",
        "\\bFeeVergelijk\\b",
        "\\bKostenOpbouw\\b",
        "\\bTariefTabel\\b"
      ]
    },
    {
      "id": "PRICE_MODEL_SIGNALS",
      "severity": "HIGH",
      "note": "Echte reken-/stuur-signalen (percentages/bedragen/rekenlogica).",
      "patterns": [
        "€\\s?\\d+",
        "\\b\\d+\\s?%\\b",
        "\\b(platformfee|escrow)\\b.*\\b\\d+\\s?%\\b",
        "\\b(toFixed\\(|\\*\\s*0\\.|\\/\\s*100\\b|\\bfeePct\\b|\\bescrowPct\\b|\\bplatformFee\\b|\\bbureauMarge\\b)\\b",
        "\\b(calculator|rekenmodel|bereken|vergelijk)\\b"
      ]
    },
    {
      "id": "PRICE_WORDING",
      "severity": "MEDIUM",
      "note": "Prijswoorden in copy (review, maar niet automatisch fout).",
      "patterns": [
        "\\b(uurtarief|uurprijs|tarief|kosten|fee|marge|netto)\\b"
      ]
    },
    {
      "id": "EMPLOYER_LANGUAGE",
      "severity": "MEDIUM",
      "note": "Werkgever-/gezagstaal (kan zelfstandigheid/1-op-1 framing ondermijnen).",
      "patterns": [
        "\\b(aansturen|inzetten|onderbrengen|verplicht|rooster|geplande uren|werknemer)\\b"
      ]
    },
    {
      "id": "GUARANTEE_LANGUAGE",
      "severity": "MEDIUM",
      "note": "Garantie-taal is gevoelig; ‘geen garantie’ is oké maar check context.",
      "patterns": [
        "\\bgarantie\\b"
      ],
      "allowIf": [
        "\\bgeen\\s+garantie\\b",
        "\\bzonder\\s+garantie\\b"
      ]
    },
    {
      "id": "BACKSTAGE_TERMS",
      "severity": "LOW",
      "note": "Backstage/ProSafetyMatch termen die je frontstage kunnen vertroebelen.",
      "patterns": [
        "\\bDBA-?proof\\b",
        "\\bcompliant\\s+samenwerken\\b",
        "\\bdossier(s)?\\s+per\\s+opdracht\\b"
      ]
    }
  ]
}
