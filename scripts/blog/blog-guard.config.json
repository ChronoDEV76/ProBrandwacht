{
  "scanRoot": "content/blog",
  "extensions": [".mdx"],

  "requiredFrontmatterKeys": [
    "title",
    "slug",
    "date",
    "category",
    "description",
    "canonical",
    "pillar"
  ],

  "requiredSections": [
    "Afbakening",
    "Gerelateerd"
  ],

