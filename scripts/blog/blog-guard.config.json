    { "label": "OPLOSSINGSTAAL", "pattern": "\\b(oplossing|wij bieden|wij zorgen|wij leveren)\\b" },
    { "label": "GARANTIE", "pattern": "\\b(garantie|zekerheid bieden|gegarandeerd)\\b" },
    { "label": "AANVAL_BUREAUS", "pattern": "\\b(bureaus maken winst|slager keurt|uitbuiting)\\b" },
