{
  "include": ["content/blog"],
  "extensions": [".mdx"],
  "maxFileSizeBytes": 2097152,

  "requiredFrontmatterKeys": ["title", "date", "canonical", "pillar"],
  "requiredSections": ["Afbakening", "Gerelateerd"],

  "requiredRelatedLinkPattern": "\\[[^\\]]+\\]\\((/blog/[\\w\\-\\/]+|/veiligheidskundig-kader)\\)",

  "rules": [
    {
      "id": "MISSING_FRONTMATTER_KEYS",
      "level": "HIGH",
      "message": "Blog mist verplichte frontmatter velden (SEO/cluster-consistentie)."
    },
    {
      "id": "MISSING_REQUIRED_SECTIONS",
      "level": "HIGH",
      "message": "Blog mist verplichte secties: Veiligheidskundig kader / Afbakening / Gerelateerd."
    },
    {
      "id": "MISSING_RELATED_LINKS",
      "level": "MEDIUM",
      "message": "Gerelateerd-sectie mist interne links naar /blog/… (cluster/UX)."
    },

    {
      "id": "SOLUTION_LANGUAGE",
      "level": "HIGH",
      "message": "Oplossing-/platformtaal: ProBrandwacht mag duiden, niet oplossen.",
      "patterns": [
        "\\bwij\\s+(regelen|leveren|lossen\\s+op|bieden|zorgen\\s+voor|fixen|uit\\s+handen\\s+nemen)\\b",
        "\\b(boek|boeken|bestel|bestellen)\\b.*\\b(brandwacht|inzet)\\b",
        "\\bvia\\s+ons\\b",
        "\\bons\\s+platform\\b",
        "\\bspoed\\s*funnel\\b",
        "\\bwij\\s+matchen\\b",
        "\\bmatching\\b"
      ]
    },

    {
      "id": "GUARANTEE_LANGUAGE",
      "level": "HIGH",
      "message": "Beloftes/garanties ondermijnen neutraliteit (maar 'geen garantie' is OK).",
      "patterns": [
        { "re": "\\bgarantie\\b", "allowIf": "\\bgeen\\s+garantie\\b" },
        "\\bgegarandeerd\\b",
        { "re": "\\bzekerheid\\b", "level": "MEDIUM" },
        "\\bcompliance[-\\s]?oplossing\\b",
        "\\bDBA[-\\s]?proof\\b"
      ]
    },

    {
      "id": "ATTACK_LANGUAGE",
      "level": "MEDIUM",
      "message": "Aanval-/strijdtaal richting bureaus: blijf beschrijvend, niet polariserend.",
      "patterns": [
        "\\bbureaus?\\b.*\\b(schijnveiligheid|oplichting|parasiteren|afroming|uitbuiting|maffia|kartel)\\b",
        "\\b(aanvallen|kapotmaken|afrekenen\\s+met|strijd\\s+tegen)\\b",
        "\\bwij\\s+pakken\\s+de\\s+bureaus\\b"
      ]
    },

    {
      "id": "PRICE_SIGNALS",
      "level": "INFO",
      "message": "Prijs-/verdienmodeltaal: in blogs alleen beschrijvend en bron-gedragen.",
      "patterns": [
        "\\buurtarief\\b",
        "\\btarieven?\\b",
        "\\bfee\\b",
        "\\bmarge\\b",
        "\\bpercentage\\b",
        "\\bcalculator\\b",
        "\\bbereken(en)?\\b",
        "€\\s?\\d+"
      ]
    }
  ]
}
